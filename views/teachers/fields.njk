<div class="item">
                <div>Avatar</div>
                <div>
                    <input type="url" name="avatar_url" placeholder="http://" value="{{ teacher.avatar_url }}">
                </div>
            </div>
            <div class="item">
                <div>Nome Completo</div>
                <div>
                    <input type="text" name="name" placeholder="Nome do professor" value="{{ teacher.name }}">
                </div>
            </div>
            <div class="item">
                <div>Data de Nascimento</div>
                <div>
                    <input type="date" name="birth" value="{{ teacher.birth }}">
                </div>
            </div>
            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>
                    <select name="level">
                        <option value="EMC" {% if teacher.level == 'EMC'%} selected {% endif %}>Ensino Médio Completo</option>
                        <option value="ESC" {% if teacher.level == 'ESC'%} selected {% endif %}>Ensino Superior Completo</option>
                        <option value="M" {% if teacher.level == 'M'%} selected {% endif %}>Mestrado</option>
                        <option value="D" {% if teacher.level == 'D'%} selected {% endif %}>Doutorado</option>
                    </select>
                </div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div>
                    <span><input type="radio" name="classroom" value="presential" 
                    {% if teacher.classroom == 'presential'%} checked {% endif %}>
                    <label for="presential">Presencial</label></span>

                    <span><input type="radio" name="classroom" value="distance"
                    {% if teacher.classroom == 'distance'%} checked {% endif %}>
                    <label for="distance">À distância</label></span>
                </div> 
            </div>
            <div class="item">
                <div>Área de Atuação</div>
                <div>
                    <input type="text" name="subject" placeholder="Separe as disciplinas por vírgula" value="{{ teacher.subject }}">
                </div>
            </div>

            <button type="submit">Salvar</button>